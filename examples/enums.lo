enum State { None | Loading | Loaded }

main |state: State, input: str| {
    state = #None;
    State_print(state);
    out("Press enter to load...");
    in(&input);

    state = #Loading;
    State_print(state);
    wait_s(3);

    state = #Loaded;
    State_print(state);
}

func State_print(state: State) || match state {
    #None -> out("None");
    #Loading -> out("Loading");
    #Loaded -> out("Loaded");
}
