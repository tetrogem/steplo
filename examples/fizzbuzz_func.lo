main {
    out("Enter how many iterations to perform:");

    let iters: uint = 0;
    in(<<&str>>&iters);

    let i: uint = 1;
    while (i <= iters) {
        let result: val = "";
        fizzbuzz(&result, i);
        out(result);
        i = (i + 1);
    }

    out("Done!");
}

func fizzbuzz(return: &val, num: uint)
    if ((num % 15) == 0) *return = "FizzBuzz";
    else if ((num % 3) == 0) *return = "Fizz";
    else if ((num % 5) == 0) *return = "Buzz";
    else *return = num;
