main {
    let a: num = 10;
    print(a);

    let b: num = double(a);
    print(b);

    a = sum(a, b);
    print(a);

    out("Finished!");
}

func double(x: num) -> num (x * 2)
func sum(a: num, b: num) -> num (a + b)

func print(num: num) {
    let str: str = "The value is: ";
    str = (str ~ num);
    str = (str ~ "!");
    out(str);
}

// Expected stdout:
// The value is: 10!
// The value is: 20!
// The value is: 30!
// Finished!
