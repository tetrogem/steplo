main {
    let a: num = 10;
    print(a);

    let b: num = 0;
    double(&b, a);
    print(b);

    sum(&a, a, b);
    print(a);

    out("Finished!");
}

func double(ret: &num, x: num) {
    *ret = (x * 2);
}

func sum(ret: &num, a: num, b: num) {
    *ret = (a + b);
}

func print(num: num) {
    let str: str = "The value is: ";
    str = (str ~ num);
    str = (str ~ "!");
    out(str);
}
