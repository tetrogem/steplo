{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Krazo",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.krazo",
          "match": "\\b(main|func|ref|deref|if|else|while|slice)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.krazo",
          "match": "(=|;|\\(|\\)|{|}|\\[|\\]|\\||,|\\.)"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.krazo",
          "match": "\\b(deref|add|sub|mul|div|mod|eq|neq|gt|lt|gte|lte|and|or|xor|not|join)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.krazo",
          "match": "(\".*?\")"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.krazo",
          "match": "\\b([0-9]+)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.krazo",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.krazo",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*\\()"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.krazo",
          "match": "//.*"
        }
      ]
    }
  },
  "scopeName": "source.krazo"
}
