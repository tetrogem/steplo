main |i, zero, one, cond, msg| {
    i = lit "10";
    one = lit "1";
    zero = lit "0";

    msg = lit "Start!";
    out(msg);

    cond = lit "1";
    while cond {
        out(i);
        i = sub i one;
        cond = eq i zero;
        cond = not cond;
    }

    msg = lit "End!";
    out(msg);
}
